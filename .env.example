# Copy this file to .env and fill in the real secrets for local development.

# Database Configuration
# PostgreSQL (Recommended for local development)
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/csf_db

# SQLite (For testing or PythonAnywhere deployment)
# DATABASE_URL=sqlite+aiosqlite:///./csf.db

SECRET_KEY=change-me-at-least-32-characters-long

# Optional integrations
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI=
STRIPE_SECRET_KEY=
STRIPE_PUBLISHABLE_KEY=
STRIPE_WEBHOOK_SECRET=

# Encryption (Fernet key for PII encryption)
# Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode('utf-8'))"
ENCRYPTION_KEY=

# CORS Origins (comma-separated list)
# Examples:
# - Development: CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001
# - Production: CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
# - Wildcard subdomains: CORS_ALLOWED_ORIGINS=https://*.yourdomain.com
# - Allow all (NOT for production): CORS_ALLOWED_ORIGINS=*
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# SMS - Twilio (optional)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=
